{{!
Available Page fields
-------------------------
data.fields.title
data.fields.coverImage
data.fields.content
data.fields.author
data.fields.published
}}

<header id="post-header"{{#if data.fields.coverImage}} class="has-cover" {{/if}}>
  <div class="inner">
    <nav id="navigation">

      {{#if webSite.logoUrl}}
        <span class="blog-logo">
          <a href="{{webSite.url}}"><img src="{{webSite.logoUrl}}" alt="Blog Logo" /></a>
        </span>
      {{else}}
        <span id="home-button" class="nav-button">
          <a class="home-button" href="{{webSite.url}}" title="Home"><i class="ic ic-arrow-left"></i> Home</a>
        </span>
      {{/if}}

      {{#if webSite.showMenuButton}}
        <span id="menu-button" class="nav-button">
          <a class="menu-button"><i class="ic ic-menu"></i> Menu</a>
        </span>
      {{/if}}
    </nav>

    <h1 class="post-title">{{{data.fields.title}}}</h1>

    {{#if data.fields.coverImage}}
      <div class="post-cover cover" style="background-image: url('{{data.fields.coverImage}}');"></div>
    {{/if}}

  </div>
</header>
