<nav id="menu">
	<a class="close-button">Close</a>
	<div class="nav-wrapper">

		<p class="nav-label">Menu</p>

		<ul>

			{{!#foreach navigation}}
				<li class="nav-{{slug}}{{#if current}} active{{/if}}" role="presentation"><a href="{{!url absolute="true"}}">{{label}}</a></li>
			{{!/foreach}}

			{{#if website.navigation.twitter.url}}
				<li class="nav-twitter"><a href="{{website.navigation.twitter.url}}" title="{{website.navigation.twitter.title}}"><i class="ic ic-twitter"></i> Twitter</a></li>
			{{/if}}

			{{#if webSite.navigation.facebook.url}}
				<li class="nav-facebook"><a href="{{webSite.navigation.facebook.url}}" title="{{website.navigation.facebook.title}}><i class="ic ic-facebook"></i> Facebook</a></li>
			{{/if}}


			{{!#if @labs.subscribers}}
				<li class="nav-subscribe"><a href="{{!webSite.url}}/subscribe/"><i class="ic ic-mail"></i> Subscribe</a></li>
			{{!else}}
				<li class="nav-rss"><a href="{{!webSite.url}}/rss/"><i class="ic ic-rss"></i> Subscribe</a></li>
			{{!/if}}

		</ul>

	</div>
</nav>
