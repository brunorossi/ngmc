<main class="content" role="main">

  <article class="{{!post_class}}">
    <div class="inner">

      <section class="post-content">
        {{data.fields.content}}
      </section>

      <section class="post-info">

        <div class="post-share">
          <a class="twitter" href="https://twitter.com/share?text={{data.fields.title}}&url={{!url}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <i class="ic ic-twitter"></i><span class="hidden">Twitter</span>
          </a>
          <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{!url}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <i class="ic ic-facebook"></i><span class="hidden">Facebook</span>
          </a>
          <a class="googleplus" href="https://plus.google.com/share?url={{!url}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <i class="ic ic-googleplus"></i><span class="hidden">Google+</span>
          </a>
          <div class="clear"></div>
        </div>

        <aside class="post-tags">
          {{#each data.fields.tags}} {{fields.name}} {{/each}}
        </aside>

        <div class="clear"></div>

        {{#with data.fields.author.fields}}
          <aside class="post-author">
            <figure class="post-author-avatar avatar">
              {{#if profileImage}}
                <img src="{{profileImage}}" alt="{{nickName}}" />
              {{/if}}
            </figure>
            <div class="post-author-bio">
              <h4 class="post-author-name"><a href="{{!url}}">{{nickName}}</a></h4>
              {{#if bio}}
                <p class="post-author-about">{{bio}}</p>
              {{/if}}
              {{#if location}}
                <span class="post-author-location"><i class="ic ic-location"></i> {{location}}</span>
              {{/if}}
              {{#if webSite}}
                <span class="post-author-website"><i class="ic ic-link"></i> <a href="{{webSite}}">Website</a></span>
              {{/if}}
              {{#if twitter}}
                <span class="post-author-twitter"><i class="ic ic-twitter"></i> <a target="_blank" href="https://twitter.com/{{twitter}}">Twitter</a></span>
              {{/if}}
              {{#if facebook}}
                <span class="post-author-facebook"><i class="ic ic-facebook"></i> <a target="_blank" href="https://facebook.com/{{facebook}}">Facebook</a></span>
              {{/if}}
            </div>
            <div class="clear"></div>
          </aside>
        </section>
      {{/with}}

      <section class="post-comments">
        <a id="show-disqus" class="post-comments-activate">Show Comments</a>
        <div id="disqus_thread"></div>
      </section>

      {{#if webSite.enableDisqus}}
        <section class="post-subscribe">
          {{>disqus}}
          <p>Get the latest posts delivered right to your inbox.</p>
        </section>
      {{/if}}

      <aside class="post-nav">
        {{!#next_post}}
        <a class="post-nav-next" href="{{!url}}">
          <section class="post-nav-teaser">
            <i class="ic ic-arrow-left"></i>
            <h2 class="post-nav-title">{{!title}}</h2>
            <p class="post-nav-excerpt">{{!excerpt words="12"}}&hellip;</p>
          </section>
        </a>
        {{!/next_post}}
        {{!#prev_post}}
        <a class="post-nav-prev" href="{{!url}}">
          <section class="post-nav-teaser">
            <i class="ic ic-arrow-right"></i>
            <h2 class="post-nav-title">{{!title}}</h2>
            <p class="post-nav-excerpt">{{!excerpt words="12"}}&hellip;</p>
          </section>
        </a>
        {{!/prev_post}}
        <div class="clear"></div>
      </aside>

    </div>
  </article>

</main>
